<%- include("../layout/open") %>
<%- include("../layout/header-administrador") %>


<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <% if(editMode) { %>
                Editar Candidato
                <% } else { %>
                Agregar Candidato
                <% } %>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="POST" action=<% if(editMode) { %> "/editar-candidato"
                    <% } else { %> "/agregar-candidato" <% } %>>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del candidato</label>
                        <input type="text" class="form-control" id="nombre" name="nombre"
                            value="<% if(editMode) { %><%=candidato.nombre%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="apellido" class="form-label">Nombre del candidato</label>
                        <input type="text" class="form-control" id="apellido" name="apellido"
                            value="<% if(editMode) { %><%=candidato.apellido%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="partido" class="form-label">Partido al que pertenece</label>
                        <input type="number" class="form-control" id="partido" name="partido_al_que_pertenece"
                            value="<% if(editMode) { %><%=candidato.partido%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="puesto" class="form-label">Puesto al que aspira</label>
                        <input type="number" class="form-control" id="puesto" name="puesto_al_que_aspira"
                            value="<% if(editMode) { %><%=candidato.puesto%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="formFile" class="form-label">Foto del candidato</label>
                        <input class="form-control" name="ImagePath" type="file" id="formFile">
                    </div>



                    <% if (editMode) { %>
                    <div class="mb-3">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-control" id="estado" name="estado">
                            <option value=1>Activo</option>
                            <option value=0>Inactivo</option>
                        </select>
                    </div>
                    <% } %>

                    <% if (editMode) { %>
                    <input type="hidden" name="candidatoId" value="<%= candidato.id %> ">
                    <% } %>


                    <button type="submit" class="btn btn-primary">
                        <% if(editMode) { %>
                        Editar
                        <% } else { %>
                        Agregar
                        <% } %>
                    </button>
                    <a href="/candidatos" type="button" class="btn btn-warning">Regresar</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>





<%- include("../layout/footer") %>
<%- include("../layout/close") %>