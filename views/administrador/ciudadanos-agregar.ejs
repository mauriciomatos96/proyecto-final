<%- include("../layout/open") %>
<%- include("../layout/header-administrador") %>


<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <% if(editMode) { %>
                Editar Ciudadano
                <% } else { %>
                Agregar Ciudadano
                <% } %>
            </div>
            <div class="card-body">
                <form method="POST" action=<% if(editMode) { %> "/editar-ciudadano" <% } else { %> "/agregar-ciudadano"
                    <% } %>>
                    <div class="mb-3">
                        <label for="documento" class="form-label">Documento de identidad</label>
                        <input type="text" class="form-control" id="documento" name="documento"
                            value="<% if(editMode) { %><%=ciudadano.documento_de_identidad%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre"
                            value="<% if(editMode) { %><%=ciudadano.nombre%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="apellido" name="apellido"
                            value="<% if(editMode) { %><%=ciudadano.apellido%><% } %>">
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email"
                            value="<% if(editMode) { %><%=ciudadano.email%><% } %>">
                    </div>

                    <% if (editMode) { %>
                    <div class="mb-3">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-control" id="estado" name="estado">
                            <option value=1>Activo</option>
                            <option value=0>Inactivo</option>
                        </select>
                    </div>
                    <% } %>

                    <% if (editMode) { %>
                    <input type="hidden" name="ciudadanoId" value="<%=ciudadano.id%>">
                    <% } %>


                    <button type="submit" class="btn btn-primary">
                        <% if(editMode) { %>
                        Editar
                        <% } else { %>
                        Agregar
                        <% } %>
                    </button>
                    <a href="/ciudadanos" type="button" class="btn btn-warning">Regresar</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>





<%- include("../layout/footer") %>
<%- include("../layout/close") %>