<%- include("../layout/open") %>
<%- include("../layout/header-administrador") %>


<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Partidos</h1>
            <p class="lead text-muted">Aqui se muestra el listado de los partidos y las opciones
                que se pueden implementar con los mismos</p>
            <p>
                <a href="/agregar-partido" class="btn btn-primary my-2">Agregar nuevo pardido</a>
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            <% partidos.forEach(partido => { %>
            <div class="card col-md-3">
                <img src="<%=partido.logo%>" class="card-img-top img-responsive img-size" alt="<%=partido.nombre%>">
                <div class="card-body">
                    <h5 class="card-title"><%=partido.nombre%></h5>
                    <h6 class="card-text"><%=partido.descripcion%></h6>
                    <a href="/editar-partido/<%=partido.id%>?edit=true" class="btn btn-warning">Editar</a>

                    <form class="form-inline" id="form-delete" action="/delete-partido" method="POST">
                        <input type="hidden" name="partidoId" value="<%=partido.id%>">
                        <button type="submit" id="" class="btn btn-danger">Eliminar</button>
                    </form>


                </div>
            </div>

            <% }) %>

        </div>
    </div>
</div>





<%- include("../layout/footer") %>
<%- include("../layout/close") %>